@*Importa a model de  fruta para reconhecer os campos de cadastro da fruta*@
@model CrudMoura.Models.Fruta
<h1>Cadastro de fruta</h1>

<form asp-action="SalvarFruta" method="post">
    <label asp-for="Nome">Nome da Fruta</label>
    <input asp-for="Nome" class="form-control">
    <span asp-validation-for="Nome" class=""></span>

    <br>
    <label asp-for="Preço">Preço</label>
    <input asp-for="Preço" class="form-control">

    <br>
    <label asp-for="Quantidade">Quantidade Estoque</label>
    <input asp-for="Quantidade" class="form-control">

    <br>
    <label asp-for="Categoria">Categoria</label>
    <input asp-for="Categoria" class="form-control">

    <br><br>
    <button class="btn btn-success">Cadastrar fruta</button>

</form>